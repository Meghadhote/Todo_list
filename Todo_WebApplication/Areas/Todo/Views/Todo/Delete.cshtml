
@model Todo.Models.TodoList
<form method="Post" asp-action="DeletePost">
    <input asp-for="Todo_Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Are you sure you want to delete?</h2>
        </div>
        <div asp-validation-summary="All">

        </div>
        <div class="mb-3">
            <input asp-for="Name" disabled class="form-control" />

        </div>


        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Todo" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>



