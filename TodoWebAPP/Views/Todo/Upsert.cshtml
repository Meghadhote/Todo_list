@model Todo.Models.TodoList
    
    <form method="Post">
        <input asp-for="Todo_Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">@(Model.Todo_Id != 0? "Edit":"Create") Todo</h2>
            </div>
            <div asp-validation-summary="All">

            </div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"> </span>
            </div>

            <div class="mb-3">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"> </span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">@(Model.Todo_Id != 0? "Update":"Create")</button>
            <a asp-controller="Todo" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </form>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
